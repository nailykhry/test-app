{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "npm install --prod"
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "node bin/app/server.js --host 0.0.0.0 --prod",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }